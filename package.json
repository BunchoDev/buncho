{
  "name": "@buncho/workspace",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "homepage": "https://github.com/BunchoDev/buncho",
  "repository": {
    "type": "git",
    "url": "git@github.com:BunchoDev/buncho.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "clean": "yarn workspaces foreach run clean",
    "pkg:build": "./scripts/build.sh",
    "pkg:clean": "./scripts/clean.sh",
    "lint": "eslint --max-warnings 0 . && prettier --check .",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write .",
    "lint:scripts": "(find ./scripts -type f | xargs shellcheck) && shfmt -d ./scripts",
    "lint:scripts:fix": "(find ./scripts -type f | xargs shellcheck) && shfmt -l -w ./scripts"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@buncho/babel-preset": "workspace:packages/babel-preset",
    "@buncho/eslint-config": "workspace:packages/eslint-config",
    "@buncho/tsconfig": "workspace:packages/tsconfig",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  }
}
